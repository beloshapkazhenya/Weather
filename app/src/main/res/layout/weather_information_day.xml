<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/separatorColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/daily_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/vTvDayDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="@string/tools_date" />

        <ImageView
            android:id="@+id/vIvDayIcon"
            android:layout_width="@dimen/image_width_medium"
            android:layout_height="@dimen/image_height_medium"
            android:contentDescription="@string/weather_icon_day"
            tools:src="@drawable/unknown" />

        <TextView
            android:id="@+id/vTvDayTemperatureDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_large"
            android:gravity="end"
            android:minWidth="@dimen/min_width"
            android:textColor="@color/black"
            tools:text="@string/tools_temperature" />

        <TextView
            android:id="@+id/vTvDayTemperatureNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_large"
            android:gravity="end"
            android:minWidth="@dimen/min_width"
            android:textSize="@dimen/text_size_small"
            tools:text="@string/tools_temperature" />

    </LinearLayout>


</LinearLayout>